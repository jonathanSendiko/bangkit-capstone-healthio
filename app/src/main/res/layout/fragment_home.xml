<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/whiteBg"
    tools:context=".ui.main.home.HomeFragment">


    <TextView
        android:id="@+id/hello_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/lato_family"
        android:text="Hello"
        android:textAlignment="textStart"
        android:textColor="@color/blackAccent"
        android:textFontWeight="700"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/username_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/lato_family"
        android:text="Bryan."
        android:textAlignment="textStart"
        android:textColor="@color/blackAccent"
        android:textFontWeight="700"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/hello_home"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/lato_family"
        android:text="What do you need?"
        android:textAlignment="textStart"
        android:textColor="@color/blackAccent"
        android:textFontWeight="700"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/round_filled_white"
        android:drawablePadding="16dp"
        android:elevation="5dp"
        android:fontFamily="@font/lato_family"
        android:hint="Search Something"
        android:paddingVertical="16dp"
        android:paddingLeft="48dp"
        android:textAlignment="textStart"
        android:textColor="@color/blackAccent"
        android:textColorHint="@color/hint"
        android:textFontWeight="400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="180dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/category_cardiology"
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:src="@drawable/cardiology" />

            <ImageView
                android:id="@+id/category_gastrology"
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:src="@drawable/gastrology"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/category_neurology"
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:src="@drawable/neurology"
                tools:layout_editor_absoluteX="287dp"
                tools:layout_editor_absoluteY="425dp"></ImageView>
        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/recommendation_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato_family"
        android:text="Hospital Recommendation"
        android:textAlignment="textStart"
        android:textColor="@color/blackAccent"
        android:textFontWeight="700"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <TextView
        android:id="@+id/recommendation_home_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/lato_family"
        android:gravity="center_vertical"
        android:text="Hospital recommendation based on your location"
        android:textColor="@color/hint"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommendation_home" />

    <TextView
        android:id="@+id/see_all_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_family"
        android:gravity="center"
        android:text="See All"
        android:textColor="@color/blueaccent"
        android:textFontWeight="700"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <ImageView
        android:id="@+id/hospital_image_home"
        android:layout_width="0dp"
        android:layout_height="195dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="17dp"
        android:elevation="5dp"
        android:src="@drawable/sample_hospital"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommendation_home_description" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="154dp"
        android:layout_marginHorizontal="17dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.930">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hospital_name_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="79dp"
                android:layout_marginBottom="52dp"
                android:fontFamily="@font/lato_family"
                android:gravity="center"
                android:text="Murni Teguh Memorial Hospital"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hospital_loc_home"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lato_family"
                android:gravity="start"
                android:text="Jl. Jawa No.2, Gg. Buntu, Kec. Medan Tim., Kota Medan, Sumatera Utara 20231"
                android:textColor="@color/hint"
                android:textFontWeight="700"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/mapIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="24dp"
                android:elevation="5dp"
                android:src="@drawable/ic_maps"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/hospital_loc_home" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <ImageView
        android:layout_width="29dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="116dp"
        android:elevation="5dp"
        android:src="@drawable/search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>